{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "indexImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "productName": {
      "type": "string",
      "required": true
    },
    "inStock": {
      "type": "boolean",
      "required": true
    },
    "isDiscount": {
      "type": "boolean",
      "required": true
    },
    "oldPrice": {
      "type": "float"
    },
    "currentPrice": {
      "type": "float",
      "required": true
    },
    "quantity": {
      "type": "integer",
      "required": true,
      "default": 1
    },
    "highlights": {
      "type": "richtext",
      "required": true
    },
    "details": {
      "type": "richtext",
      "required": true
    },
    "productImageOne": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "productImageTwo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "productImageThree": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "slug": {
      "type": "uid",
      "required": true,
      "targetField": "productName"
    }
  }
}
